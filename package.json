{
  "name": "typescript-clean-architecture-api",
  "version": "1.0.0",
  "description": "An example api that follows the clean architecture principles",
  "main": "index.js",
  "scripts": {
    "prestart": "yarn build",
    "start": "node ./build/index.js",
    "dev": "nodemon src/index.ts",
    "test": "jest --passWithNoTests",
    "test:watch": "yarn test --watchAll",
    "build": "tsc",
    "build:watch:": "yarn build --watch",
    "pretty-base": "prettier \"**/*.{ts, js, json}\"",
    "format": "npm run pretty-base --write",
    "lint": "eslint --fix 'src/**/*.{ts,tsx}'",
    "format:lint": "yarn format && yarn lint",
    "postinstall": "is-ci || husky install"
  },
  "keywords": [],
  "author": "Muhammad Qasim <qasim9872@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "husky": "^5.0.9",
    "is-ci": "^3.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "pinst": "^2.1.4",
    "prettier": "^2.2.1",
    "prettier-eslint": "^12.0.0",
    "ts-node": "^9.1.1"
  },
  "dependencies": {
    "typescript": "^3.9.9"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --max-warnings 0 --fix 'src/**/*.{ts,tsx}'"
    ],
    "*.json": [
      "npm run format"
    ]
  }
}
